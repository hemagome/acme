{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".astro/dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": false,
      "outputs": []
    },
    "fix": {
      "dependsOn": ["^fix"],
      "cache": false,
      "outputs": []
    },
    "format": {
      "dependsOn": ["^fix"],
      "cache": false,
      "outputs": []
    }
  }
}
